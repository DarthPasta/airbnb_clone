<!DOCTYPE html>
<html>
  <head>
    <title>AirbnbClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
<div id="nav-bar">
  <div class="nav-bar-left">
    <a class="navbar-brand" href="#"><%= image_tag("airbnb_logo", :class => "brand_img") %></a>
  </div>

  <div class="nav-bar-right">
    <div class="nav-bar-right-content">
    <p><%=link_to "Help" %></p>
  <% if signed_in? %>
    <p><%= link_to "Profile", user_path(current_user.id), method: :get %></p>
    <p><%= link_to "Log Out", sign_out_path, method: :delete %></p>
  <% else %>
    <p><%= link_to "Sign Up", sign_up_path %></p>
    <p><%= link_to "Log In", sign_in_path %></p>
  <% end %>
    </div>
  </div>
</div>


  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <div class="yield">
  <%= yield %>
  </div>
</body>
</html>
