<h2 class="intro"><span style="color: red">Airbnb Book</span> unique homes and experience a city like a local.</h2>

<div class="row">
  <div class="col-lg-8">
    <div class="input-group">
      <input type="text" name="location" class="form-control" placeholder="Search for Location">    
      <input type="text" name="location" class="form-control" placeholder="How many guests?">
      <span class="input-group-btn">
 		<button class="btn btn-default" type="button">Go!</button> 
      </span>
      </div>
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->


<%= will_paginate @listings %>
<br>

<div class="listing-container">
<% @listings.each do |l| %>
	<div class="listing-content">
	<table>
		<td>

			<tr><span class="listing-title"><%= l.title %></span></tr>
			<tr><%= image_tag l.image, class: "image-container"%></tr>
		<tr><%= link_to listing_path(l.id), class: "btn btn-success btn-sml" do %>
		<i class="glyphicon glyphicon-picture"></i> Show	
		</tr>
		<% end %>

		<tr><%= link_to edit_listing_path(l.id), class: "btn btn-warning btn-sml" do %>
		<i class="glyphicon glyphicon-pencil"></i> Edit	
		</tr>
		<% end %>

		<tr><%= link_to new_booking_path(l.id),  class: "btn btn-primary btn-sml" do %>
		<i class="glyphicon glyphicon-forward"></i> Book	
		</tr>
		<% end %>

		<tr><%= link_to listing_path(l.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sml" do %>
		<i class="glyphicon glyphicon-trash"></i> Delete	
		</tr></td>
		<% end %>
		</table>

		<p>Tags: 
		<% l.taggables.each do |t| %>

		<button type="button" class="btn btn-info btn-xs">
		<span class="glyphicon glyphicon-magnet" aria-hidden="true"></span>
		<%= t.tag.name %>
		</button>

		<% end %></p>

		<p>Created by:
		<% if l.user %>
			<tr><%= l.user.email %></tr>
		<% end %></p>
		<br>

		</div>
	<% end %>
</div>

<%= will_paginate @listings %>


<p><%= link_to "Create new listing", new_listing_path %></p>
<p><%= link_to "Back", root_path %></p>